{
  "name" : "model_repo",
  "layout_id" : "MR-1",
  "version" : "layout-1.2",
  "description" : "Model metadata.",
  "keys_format" : {
    "org.kiji.schema.avro.RowKeyFormat2" : {
      "encoding" : "FORMATTED",
      "salt" : {
        "hash_size" : 2
      },
      "components" : [ {
        "name" : "name",
        "type" : "STRING"
      },
      {
        "name" : "version",
        "type" : "STRING"
      } ]
    }
  },
  "locality_groups" : [ {
    "name" : "default",
    "description" : "Model metadata.",
    "in_memory" : false,
    "max_versions" : 2147483647,
    "ttl_seconds" : 2147483647,
    "bloom_type" : "ROW",
    "compression_type" : "NONE",
    "families" : [ {
      "name" : "model",
      "description" : "Generic model metadata.",
      "columns" : [ {
        "name" : "definition",
        "description" : "Model lifecycle definition configuration.",
        "column_schema" : {
          "type" : "CLASS",
          "value" : "org.kiji.express.avro.AvroModelDefinition"
        }
      }, {
        "name" : "environment",
        "description" : "Model lifecycle environment configuration.",
        "column_schema" : {
          "storage" : "UID",
          "type" : "CLASS",
          "value" : "org.kiji.express.avro.AvroModelEnvironment"
        }
      }, {
        "name" : "location",
        "description" : "Relative or fully qualified URL.",
        "column_schema" : {
          "storage" : "UID",
          "type" : "INLINE",
          "value" : "\"string\""
        }
      }, {
        "name" : "production_ready",
        "description" : "Is the model ready for production scoring?",
        "column_schema" : {
          "storage" : "UID",
          "type" : "INLINE",
          "value" : "\"boolean\""
        }
      }, {
        "name" : "message",
        "description" : "Latest change message.",
        "column_schema" : {
          "storage" : "UID",
          "type" : "INLINE",
          "value" : "\"string\""
        }
      }, {
        "name" : "uploaded",
        "description" : "Has the model been uploaded to the repository.",
        "column_schema" : {
          "storage" : "UID",
          "type" : "INLINE",
          "value" : "\"boolean\""
        }
      } ]
    } ]
  } ]
}
